<html>
  <head>
    <title>Placelister</title>

    <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">

    <script src="http://cdn.leafletjs.com/leaflet-0.7.1/leaflet.js"></script>



    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>

    <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>

    <script type="text/javascript" src="http://maps.googleapis.com/maps/api/js?key=AIzaSyCGkffnTSjs9i0PpPXthYJ93TBSJhJHEnQ&libraries=places&sensor=false"></script>



    <script src="/javascripts/angularApp.js"></script>
    <style> .glyphicon-thumbs-up { cursor:pointer } </style>
  </head>


  <body ng-app="placelister">

        <div class="row">
            <div class="col-md-6 col-md-offset-3">
              <ui-view></ui-view>
            </div>
        </div>


    <script type="text/ng-template" id="/home.html">

        <div class="page-header">
            <h1>Placelister</h1>
        </div>


        <div ng-repeat="list in lists | orderBy: '-upvotes'">

          <span class="glyphicon glyphicon-thumbs-up" ng-click="incrementUpvotes(list)"></span>
            {{list.upvotes}}
          <span style="font-size:20px; margin-left:10px;">
              <span>
                {{list.title}}
              </span>
              <span>
                <a href="#/lists/{{list._id}}">Places</a>
              </span>
          </span>

        </div>


        <!--<button ng-click="addList()">List</button>-->

        <form ng-submit="addList()" style="margin-top:30px;">
          <h3>Add a new list</h3>
          <div class="form-group">
          <input type="text" class="form-control" placeholder="Title" ng-model="title"></input>
          </div>
          <button type="submit">Add List</button>
        </form>

      </script>


    <script type="text/ng-template" id="/lists.html">
      <div class="page-header">
        <h3>
          <span>
            {{list.title}}
          </span>
        </h3>
      </div>

      <div ng-repeat="place in list.places">
        <span class="glyphicon glyphicon-thumbs-up" ng-click="removePlace(place)"></span>
        <span style="font-size:20px;">
          {{place.name}} {{place.type}}
        </span>
      </div>


      <form ng-submit="addPlace()"
        style="margin-top:30px;">
        <h3>Add a new place

        <div class="form-group">
          <input ng-model="name" class="form-control" googleplace/>
        </div>


        <button type="submit" class="btn btn-primary">Add</button>
      </form>
    </script>

  </body>
</html>